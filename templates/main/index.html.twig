{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Dashboard:</h1>
        {% if issues %}
            Issues:
            <ul>
                {% for item in issues | sort %}
                    <li>{{ item.title }}</li>
                {% endfor %}
            </ul>
        {% else %} No Issues!
        {% endif %}
    </div>
{% endblock %}
